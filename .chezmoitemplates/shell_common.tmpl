# Shared prompt functions for bash and zsh
# Show active development environment in prompt
show_dev_env() {
    local parts=""

    # Python environment detection (uv / pyenv / virtualenv / venv)
    if [[ -n "$VIRTUAL_ENV" ]]; then
        local venv_name
        venv_name="$(basename "$VIRTUAL_ENV")"
        if [[ -n "$UV_ACTIVE" ]]; then
            parts+="(uv:${venv_name})"
        elif [[ -n "$POETRY_ACTIVE" ]]; then
            parts+="(poetry:${venv_name})"
        elif [[ "$venv_name" == ".venv" || "$venv_name" == "venv" ]]; then
            parts+="(venv)"
        else
            parts+="(${venv_name})"
        fi
    elif command -v pyenv >/dev/null 2>&1; then
        local pyver
        pyver="$(pyenv version-name 2>/dev/null)"
        if [[ -n "$pyver" && "$pyver" != "system" ]]; then
            parts+="(pyenv:${pyver})"
        fi
    fi

    # Node.js environment (nvm via direnv)
    if [[ -n "$DIRENV_NVM_VERSION" && -n "$DIRENV_DIR" ]]; then
        parts+="(nvm:$(node --version 2>/dev/null))"
    fi

    [[ -n "$parts" ]] && echo "$parts"
}