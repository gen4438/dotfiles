  // ===== 手動追加キーバインド =====
  // ここに他のカスタムキーバインドを追加できます
  {
    "command": "vscode-neovim.escape",
    "key": "Escape",
    "when": "editorTextFocus && neovim.init"
  },
  {
    "command": "workbench.action.maximizeEditorHideSidebar",
    "key": "ctrl+k ctrl+m",
    "when": "editorTextFocus"
  },
  {
    "command": "workbench.action.toggleMaximizedPanel",
    "key": "ctrl+k ctrl+m",
