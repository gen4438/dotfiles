{{- if eq .chezmoi.os "darwin" -}}
{{ template "shebang-bash.tmpl" . }}
# Install essential packages for macOS development environment

set -e

echo "Installing essential packages for macOS..."

# Install Homebrew if not present
if ! command -v brew >/dev/null 2>&1; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    
    # Add Homebrew to PATH for current session
    if [[ -f /opt/homebrew/bin/brew ]]; then
        # Apple Silicon
        eval "$(/opt/homebrew/bin/brew shellenv)"
    elif [[ -f /usr/local/bin/brew ]]; then
        # Intel
        eval "$(/usr/local/bin/brew shellenv)"
    fi
fi

# Update Homebrew
brew update

# Install essential packages using Homebrew Bundle
brew bundle --file=/dev/stdin <<EOF
# Core utilities
brew "coreutils"
brew "curl"
brew "wget"
brew "rsync"
brew "unzip"
brew "tree"
brew "pwgen"

# Development tools
brew "git"
brew "git-delta"
brew "gh"
brew "cmake"
brew "ninja"
brew "ctags"
brew "pkg-config"

# Programming languages and build dependencies
brew "python"
brew "node"
brew "lua"
brew "luajit"
brew "lua-language-server"
brew "readline"
brew "sqlite"
brew "xz"
brew "zlib"

# Version managers
brew "nvm"
brew "pyenv"
brew "pyenv-virtualenv"

# Text editors and terminal tools
brew "neovim"
brew "vim"
brew "tmux"
brew "byobu"
brew "gitmux"  # Git status for tmux/byobu

# Modern CLI tools
brew "bat"
brew "fd"
brew "fzf"
brew "ripgrep"
brew "jq"
brew "direnv"
brew "emojify"

# Shell enhancements
brew "zsh"
brew "bash-completion"
brew "zsh-completions"
brew "zplug"

# macOS specific tools
brew "mas"  # Mac App Store CLI

# GUI applications (Cask)
cask "rectangle"  # Window management
cask "karabiner-elements"  # Keyboard customization
cask "flameshot"  # Screenshot tool
cask "hammerspoon"  # macOS automation
cask "vlc"  # Media player
cask "rar"  # RAR archive utility
cask "xquartz"  # X11 for macOS

# Fonts (Cask)
cask "font-fantasque-sans-mono-nerd-font"  # Nerd Font
cask "font-hack-nerd-font"  # Nerd Font
EOF

# Install fzf key bindings and fuzzy completion
$(brew --prefix)/opt/fzf/install --all

# Install oh-my-zsh
if [ ! -d "$HOME/.oh-my-zsh" ]; then
    echo "Installing oh-my-zsh..."
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
fi

echo "âœ… Essential packages installed successfully"
{{- end }}
