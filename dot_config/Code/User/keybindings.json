[
  // ===== Neovim高優先度キーバインド =====
  // settings.jsonの設定に基づき、NeovimにCtrlキーを直接渡す
  //
  // 通常モード用キー: a, d, e, f, h, i, l, o, p, r, u, v, w
  // 挿入モード用キー: j, o, r, u

  // -- Normal Mode Keys --
  {
    "key": "ctrl+a",
    "command": "vscode-neovim.send",
    "args": "<C-a>",
    "when": "editorTextFocus && neovim.init && neovim.mode == 'normal'"
  },
  {
    "key": "ctrl+d",
    "command": "vscode-neovim.send",
    "args": "<C-d>",
    "when": "editorTextFocus && neovim.init && neovim.mode == 'normal'"
